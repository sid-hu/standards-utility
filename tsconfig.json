{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "module": "esnext",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "types": ["jest"]
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "src/~/proto/*"
  ]
}